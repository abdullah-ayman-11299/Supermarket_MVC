@model IEnumerable<CoreBusiness.Category> 


@section title {
    <h1>Categories</h1>
}

    <p>Here we going to Display The categories</p>

@if(Model != null && Model.Count() > 0)
{
    <table class="table table-striped mb-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var cat in Model)
            {
                <tr>
                <td>@cat.Name</td>
                <td>@cat.Description</td>
                <td>
                    <a class="btn btn-link" asp-action="Edit" asp-route-id="@cat.Id">Edit</a>
                </td>
                <td>
                    <a class="btn btn-link" asp-action="Delete" asp-route-id="@cat.Id" onclick="return confirmDelete()">Delete</a>
                </td>

                </tr>
            }
        </tbody>
    </table>
}
<a class="btn btn-primary" asp-action="Add">Add</a>
@section Scripts{
    <script>
        function confirmDelete()
        {
            return confirm("Are you sure you want to delete this category?");
        }
    </script>
}