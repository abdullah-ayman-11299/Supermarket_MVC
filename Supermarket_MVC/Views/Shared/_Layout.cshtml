<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>SuperMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    </head>
    <body>
        <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand">Supermarket</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Title == "Home"?"active":"")" aria-current="page" href="/Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Title == "Sales"?"active":"")" href="/Sales">Sell</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Title == "Categories"?"active":"")" href="/Categories">Categories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Title == "Products"?"active":"")" href="/Products">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewBag.Title == "Transactions"?"active":"")" href="/Transactions">Transactions</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        </header>
        <div class="container">
            <br />
            <div class="pb-3 mt-3">
                @RenderSection("Title",false)
            </div>
            <div>
            @RenderBody()
            </div>
        </div>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>