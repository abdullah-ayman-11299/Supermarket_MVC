@model ProductCategoriesViewModel
@{
    string Action = ViewBag.Action ?? string.Empty;
}
<form method="post" asp-action="@(Action.ToLower() == "edit"?"Edit":"Add")">
    <div asp-validation-summary="All" class="text-danger"></div>
    @if (Action.ToLower() == "edit")
    {
        <input type="hidden" asp-for="Product.Id"/>
    }
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.CategoryId" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <select itemtype="" asp-for="Product.CategoryId" class="form-control">
                <option>- Please Select -</option>
                @if (Model.categories.Count() > 0 && Model.categories != null)
                {
                    @foreach (var cat in Model.categories)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col">
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Name" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="text" asp-for="Product.Name" class="form-control" />
        </div>
        <div class="col">
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Price" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Product.Price" class="form-control" min="0" step="any" />
        </div>
        <div class="col">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

    </div>

    <div class="row mb-3">
        <div class="col-2">
            <label asp-for="Product.Quantity" class="col-form-label"></label>
        </div>
        <div class="col-6">
            <input type="number" asp-for="Product.Quantity" class="form-control" min="1" />
        </div>
        <div class="col">
            <span asp-validation-for="Product.Quantity" class="text-danger"></span>
        </div>
    </div>
    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="@(Action.ToLower() == "edit"?"Save":"Add")" />
        </div>
    </div>
</form>